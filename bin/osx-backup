#!/bin/bash
source /etc/profile 
HEADERS=(-H "Content-type: application/json" -H "Accept: application/json");
Suffix=''
if [[ $(date +%u) -eq 5 ]] ;then # Friday
    week=$(date +%V)
    if  [[ $((week % 10)) -ne 0 ]] ;then
        week=$((week % 10))
    fi
    Suffix=Wk$week
elif [[ $(date +%u) -lt 5 ]] ;then
    Suffix=$(date +%a)
fi
if [ "$Suffix" ] ;then
    $HOME/bin/ampbackup $Suffix
    echo "Backup ampep at $(date)"
    PgLaunch.sh pgcmd pg_dump --clean --if-exists ampep \
        | gzip > $HOME/tmp/db-backup/ampep-${Suffix}.gz
    echo "Backup greenwise at $(date)"
    PgLaunch.sh pgcmd pg_dump --clean --if-exists --exclude-table tz_world greenwise \
        | gzip > /$HOME/tmp/db-backup/greenwise-${Suffix}.gz
    for h in checkmark.amsdns.net app.checkmarks.co.uk ;do 
        for t in CM-SITE CM-USER ;do
            curl -s -X GET -u 'CheckMarkBatch:beep[whob]bop' https://${h}/aasws/jsonstore/query/${t}/%25 \
                | bzip2 > /Users/fm/tmp/cm-backup/${h}-${t}-${Suffix}.json.bz2
        done
    done
    for h in one.gridlight.dk ;do 
        for p in gridCPU gridDOT gridCPU_LTE gridDOT_LTE ;do
            curl --fail --silent -X GET "${HEADERS[@]}" -u amplexfm:'mal$124dk' https://${h}/aasws/moduleproddata/${p} \
                | bzip2 > /Users/fm/tmp/prod-backup/${h}-${p}-${Suffix}.json.bz2
        done
    done
fi
