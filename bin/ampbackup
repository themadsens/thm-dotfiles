#!/bin/bash

declare -a BACKUP=( ampdev0 Backup )

if [[ $1 == "restore" ]] ;then
    fname=$(cut -d: -f1 <<< $2)
    pattern=$(cut -d: -f2 <<< $2)
    ssh ${BACKUP[0]} "cd ${BACKUP[1]}; cat b-$fname.cpio.lzo" | lzop -d | cpio -ivBdum $pattern
    exit 0
fi

eval $(keychain --eval --quiet)

BackupName=$1
echo "Start backup for $BackupName at $(date)"
cd $HOME/amplex
for Dir in */backmeup */*/backmeup */*/*/backmeup ;do
    Dir=${Dir%/*}
    [[ -d $Dir ]] || continue
    FDir=${Dir//\//_}
    (cd $Dir
     svn status | grep '^[AM]' | cut -c9- > /tmp/fn$$
     echo "Backup $Dir as $FDir-$BackupName $(wc /tmp/fn$$)"
     cat /tmp/fn$$  | cpio -o --quiet | lzop \
       | ssh ${BACKUP[0]} "cd ${BACKUP[1]}; cat >b-$FDir-$BackupName.cpio.lzo"
     scp -q /tmp/fn$$ ${BACKUP[0]}:${BACKUP[1]}/i-$FDir-$BackupName
     rm -f /tmp/fn$$
    )
done
echo "End backup for $BackupName at $(date)"
