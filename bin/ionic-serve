#!/bin/bash
./go_${1:-app}.sh $2
while true ;do
    rlwrap --command ionic-serve --file . --remember --histsize 9999 \
           ionic serve --nobrowser --lab --all --serverlogs "$@" #--consolelogs 
    if [ $? -ge 128 ] ;then
        exit # signal'ed
    fi
    L=$(readlink ionic.config.json)
    if [[ $L == *.app.* ]] ;then
        ./go_dashboard.sh $2 
        echo "Switched to dashboard ${2:+($2) }mode"
    else
        ./go_app.sh
        echo 'Switched to app mode'
    fi
done
