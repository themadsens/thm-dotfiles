#!/source/bash

unset NOTTPS1

un-xtensa() {
    for path in $(echo $PATH | tr : '\n' | grep xtensa-esp32) ;do
        remove_from PATH $path
    done
}

tt-esp32() {
    un-xtensa
    export PATH=~/bin3/xtensa-esp32-elf/bin/:$PATH
    export IDF_PATH=~/amplex/esp-idf
}

tt-esp32V4() {
    un-xtensa
    for path in /Users/fm/bin3/xtensa-esp32-V4/*/*/*/bin ;do
        export PATH=$path:$PATH
    done
    export IDF_PATH=~/amplex/esp-idfV4
}
